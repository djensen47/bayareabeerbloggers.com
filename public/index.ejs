<% 
function excerpt(content) {
  if(!content || content.indexOf("</p>") == -1) return;
  else return content.split("<p>")[1].split("</p>")[0];
}
%>
<!-- Banner -->
<div id="banner" class="wrapper style1">
  <h2>Hi. We're the <strong>Bay Area Beer Bloggers</strong>.</h2>
  <span class="byline">
    We're a group of beer loving friends who share a passion for drinking beer and writing about beer.  We get together once a month to talk shop and socialize at rotating places around the <span style="white-space: nowrap">San Francisco Bay Area</span>.
  </span>
</div>


<!-- Features -->
<div class="wrapper style1">
  
  <section id="features" class="container special">
    <header>
      <a name="blog-directory"></a>
      <h2>Blog Directory</h2>
      <span class="byline">Listing of the SF Bay Area Beer Blogs.</span>
    </header>
    <div class="row">
      <article class="6u special">
        <!-- <a href="http://mdomaradzki.deviantart.com/art/Bueller-VII-351975126" class="image featured"><img src="images/pic07.jpg" alt="" /></a> -->
        <header>
          <h3><a href="#">Citizen Beer Blogs</a></h3>
        </header>
        <p>
          Citizen Beer Blogs are "those not designed to promote a brewery or other business (media-based blogs are okay)." &mdash;<a style="font-size: 80%;" href="http://beerbloggersconference.org/beer-blogs/">Beer Bloggers Conference</a>
        </p>
        <%- partial("_partials/blogs", { blogs: blogs.citizen }) %>
      </article>
      <article class="6u special">
        <!-- <a href="http://mdomaradzki.deviantart.com/art/Home-Bound-Train-II-338912191" class="image featured"><img src="images/pic08.jpg" alt="" /></a> -->
        <header>
          <h3><a href="#">Industry Beer Blogs</a></h3>
        </header>
        <p>
          Industry beer blogs ones operated by breweries, brewer's guilds, distributors, retailers, or other companies promoting their beer related products.
        </p>
        <%- partial("_partials/blogs", { blogs: blogs.industry }) %>
      </article>
    </div>
  </section>

</div>

<!-- Latest Article -->
<div class="wrapper style1">

  <article id="main" class="container special">
    <header>
      <% var slug = Object.keys(public.articles._data)[0]; %>
      <% var article = public.articles._data[slug]; %>
      <h3>Latest Article</h3>
      <h2><a href="/articles/<%= slug %>.html"><%= article.title %></a></h2>
      <% if (article.description) { %>
        <span class="byline" style="margin-bottom: 1em;">
          <%= article.description %>
        </span>
      <% } %>
      <h3 class="">
        <%= article.author %> &middot; <%= article.date %>
      </h3>
    </header>
    <p>
      <%- excerpt(partial('articles/'+slug)) %>
    </p>
    <footer>
      <a href="/articles/<%= slug %>.html" class="button">Continue Reading</a>
    </footer>
  </article>

</div>
